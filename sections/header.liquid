<header class="site-header animated-header">
  <div class="announcement-bar">
    <p>Free shipping on all fashion orders this week ✨</p>
  </div>

  <div class="mobile-menu-toggle" onclick="document.body.classList.toggle('menu-open')">
    <span class="menu-icon">☰</span>
  </div>

  <nav class="mobile-nav">
    <ul>
      {% assign navItems = 'Home,Women,Men,Sale,About' | split: ',' %}
      {% for nav in navItems %}
        <li><a href="/collections/{{ nav | handle }}">{{ nav }}</a></li>
      {% endfor %}
      <li><a href="/account">Login</a></li>
      <li><a href="/cart">Cart</a></li>
    </ul>
  </nav>

  <div class="header-wrapper">
    <!-- Logo -->
    <div class="site-logo">
      <a href="/" class="logo-link">FASHIONED</a>
    </div>

    <!-- Main Navigation -->
    <nav class="main-nav">
      {% assign categories = 'Women,Men,Accessories,Sale' | split: ',' %}
      {% for cat in categories %}
        <div class="nav-item">
          <a href="/collections/{{ cat | handle }}" class="nav-link">{{ cat }}</a>
        </div>
      {% endfor %}
    </nav>

    <!-- Right Side Links -->
    <div class="header-actions">
      <a href="/account" class="header-link">Anmelden</a>
      <a href="/cart" class="header-link">Warenkorb</a>
    </div>
  </div>

  <style>
    .site-header {
      background: #fff;
      position: fixed;
      top: 0;
      width: 100%;
      z-index: 1000;
      border-bottom: 1px solid #eaeaea;
      animation: slideDown 0.5s ease-out;
      font-family: sans-serif;
    }
    @keyframes slideDown {
      from { transform: translateY(-100%); opacity: 0; }
      to { transform: translateY(0); opacity: 1; }
    }
    .announcement-bar {
      background: #000;
      color: #fff;
      text-align: center;
      font-size: 0.9rem;
      padding: 0.4rem;
    }
    .header-wrapper {
      max-width: 1200px;
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem;
    }
    .site-logo .logo-link {
      font-size: 1.8rem;
      font-weight: bold;
      text-decoration: none;
      color: #000;
      transition: transform 0.3s;
    }
    .site-logo .logo-link:hover {
      transform: scale(1.05);
    }
    .main-nav {
      display: flex;
      gap: 2rem;
    }
    .nav-link {
      text-decoration: none;
      color: #000;
      position: relative;
      font-weight: 500;
      transition: color 0.3s;
    }
    .nav-link::after {
      content: '';
      position: absolute;
      bottom: -4px;
      left: 0;
      width: 0;
      height: 2px;
      background-color: #000;
      transition: width 0.3s;
    }
    .nav-link:hover::after {
      width: 100%;
    }
    .header-actions {
      display: flex;
      gap: 1.5rem;
    }
    .header-link {
      color: #000;
      text-decoration: none;
      font-size: 0.95rem;
      transition: color 0.3s;
    }
    .header-link:hover {
      color: #555;
    }
    .mobile-menu-toggle {
      display: none;
      position: absolute;
      top: 1.2rem;
      right: 1.2rem;
      font-size: 1.5rem;
    }
    .mobile-nav {
      display: none;
      flex-direction: column;
      overflow: hidden;
      max-height: 0;
      background: white;
      transition: max-height 0.3s ease-in-out, opacity 0.3s;
      opacity: 0;
    }
    .mobile-nav ul {
      list-style: none;
      padding: 1rem;
      margin: 0;
    }
    .mobile-nav li a {
      display: block;
      padding: 0.5rem 0;
      color: #000;
      text-decoration: none;
      border-bottom: 1px solid #eee;
    }
    body.menu-open .mobile-nav {
      display: flex;
      max-height: 400px;
      opacity: 1;
    }
    @media (max-width: 768px) {
      .main-nav,
      .header-actions {
        display: none;
      }
      .mobile-menu-toggle {
        display: block;
      }
    }
  </style>
</header>
