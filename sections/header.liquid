<header class="site-header animated-header">
  <!-- Announcement Bar -->
  <div class="announcement-bar">
    <p>Free shipping on orders over $100 | Use code: FREESHIP</p>
  </div>

  <!-- Mobile Menu Toggle -->
  <div class="mobile-menu-toggle" onclick="document.body.classList.toggle('menu-open')">
    <span class="menu-icon">â˜°</span>
  </div>

  <!-- Mobile Navigation -->
  <nav class="mobile-nav">
    <ul>
      {% assign navigationItems = 'New Arrivals,Women,Men,Sale' | split: ',' %}
      {% for nav in navigationItems %}
        <li><a href="/collections/{{ nav | handle }}">{{ nav }}</a></li>
      {% endfor %}
      <li><a href="/search">Search</a></li>
      <li><a href="/account">Account</a></li>
      <li><a href="/cart">Cart</a></li>
    </ul>
  </nav>

  <div class="header-wrapper">
    <div class="header-inner">
      <!-- Logo -->
      <div class="site-logo">
        <a href="/" class="logo-link">MODERN</a>
      </div>

      <!-- Navigation -->
      <nav class="main-nav">
        {% assign navigationItems = 
          'New Arrivals,Women,Men,Sale' | split: ',' %}

        {% for nav in navigationItems %}
          <div class="nav-item">
            <a href="/collections/{{ nav | handle }}" class="nav-link">{{ nav }}</a>
          </div>
        {% endfor %}
      </nav>
    </div>
  </div>

  <style>
    body.menu-open .mobile-nav {
      max-height: 300px;
      opacity: 1;
    }
    .site-header {
      background: white;
      position: fixed;
      width: 100%;
      top: 0;
      z-index: 100;
      border-bottom: 1px solid #eee;
      transition: all 0.3s ease-in-out;
      font-family: sans-serif;
    }
    .site-header.animated-header {
      animation: fadeSlideDown 0.6s ease-out;
    }
    @keyframes fadeSlideDown {
      0% {
        opacity: 0;
        transform: translateY(-20px);
      }
      100% {
        opacity: 1;
        transform: translateY(0);
      }
    }
    .announcement-bar {
      background: black;
      color: white;
      text-align: center;
      padding: 0.5rem;
      font-size: 0.875rem;
    }
    .mobile-menu-toggle {
      display: none;
      cursor: pointer;
      padding: 0.75rem;
    }
    .menu-icon {
      font-size: 1.5rem;
    }
    .mobile-nav {
      display: none;
      flex-direction: column;
      overflow: hidden;
      max-height: 0;
      background: white;
      transition: all 0.3s ease-in-out;
      opacity: 0;
    }
    .mobile-nav ul {
      list-style: none;
      margin: 0;
      padding: 1rem;
    }
    .mobile-nav li a {
      display: block;
      padding: 0.5rem 0;
      color: black;
      text-decoration: none;
      border-bottom: 1px solid #eee;
      font-size: 1rem;
    }
    @media (max-width: 768px) {
      .main-nav {
        display: none;
      }
      .mobile-menu-toggle {
        display: block;
      }
      .mobile-nav {
        display: flex;
      }
    }
    .header-wrapper {
      max-width: 1200px;
      margin: 0 auto;
      padding: 1rem 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .site-logo .logo-link {
      font-size: 1.5rem;
      font-weight: bold;
      color: black;
      text-decoration: none;
      transition: transform 0.3s ease;
    }
    .site-logo .logo-link:hover {
      transform: scale(1.05);
    }
    .main-nav {
      display: flex;
      gap: 2rem;
    }
    .nav-link {
      color: black;
      text-decoration: none;
      position: relative;
      padding: 0.5rem;
      font-size: 0.95rem;
      font-weight: 500;
      transition: color 0.3s ease;
    }
    .nav-link::after {
      content: "";
      position: absolute;
      left: 0;
      bottom: 0;
      height: 2px;
      width: 0%;
      background-color: black;
      transition: width 0.3s ease;
    }
    .nav-link:hover::after {
      width: 100%;
    }
  </style>
</header>
