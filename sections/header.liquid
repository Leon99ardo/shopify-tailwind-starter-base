<header class="site-header">
  <!-- Announcement Bar -->
  <div class="announcement-bar">
    <p>Free shipping on orders over $100 | Use code: FREESHIP</p>
  </div>

  <div class="header-wrapper">
    <div class="header-inner">
      <!-- Logo -->
      <div class="site-logo">
        <a href="/" class="logo-link">MODERN</a>
      </div>

      <!-- Navigation -->
      <nav class="main-nav">
        {% assign navigationItems = 
          '{
            "New Arrivals": [
              {"name": "Latest Drops", "href": "/collections/latest"},
              {"name": "Pre-Order", "href": "/collections/pre-order"},
              {"name": "Trending", "href": "/collections/trending"}
            ],
            "Women": [
              {"name": "Dresses", "href": "/collections/women-dresses"},
              {"name": "Tops", "href": "/collections/women-tops"},
              {"name": "Bottoms", "href": "/collections/women-bottoms"},
              {"name": "Outerwear", "href": "/collections/women-outerwear"},
              {"name": "Accessories", "href": "/collections/women-accessories"}
            ],
            "Men": [
              {"name": "Shirts", "href": "/collections/men-shirts"},
              {"name": "Pants", "href": "/collections/men-pants"},
              {"name": "Jackets", "href": "/collections/men-jackets"},
              {"name": "Accessories", "href": "/collections/men-accessories"}
            ],
            "Sale": [
              {"name": "Up to 50% Off", "href": "/collections/sale-50"},
              {"name": "Final Sale", "href": "/collections/final-sale"},
              {"name": "Clearance", "href": "/collections/clearance"}
            ]
          }' | parse_json %}

        {% for item in navigationItems %}
          <div class="nav-item">
            <a href="/collections/{{ item[0] | handle }}" class="nav-link">
              {{ item[0] }}
            </a>
            <div class="dropdown">
              {% for subitem in item[1] %}
                <a href="{{ subitem.href }}" class="dropdown-link">{{ subitem.name }}</a>
              {% endfor %}
            </div>
          </div>
        {% endfor %}
      </nav>

      <!-- Icons -->
      <div class="header-icons">
        <a href="/search" title="Search" class="icon">üîç</a>
        <a href="/pages/wishlist" title="Wishlist" class="icon">‚ù§Ô∏è</a>
        <a href="/account" title="Account" class="icon">üë§</a>
        <a href="/cart" title="Cart" class="icon">
          üõí
          {% if cart.item_count > 0 %}
            <span class="cart-count">{{ cart.item_count }}</span>
          {% endif %}
        </a>
      </div>
    </div>
  </div>

  <style>
    .site-header { background: white; position: fixed; width: 100%; top: 0; z-index: 100; border-bottom: 1px solid #eee; }
    .announcement-bar { background: black; color: white; text-align: center; padding: 0.5rem; font-size: 0.875rem; }
    .header-wrapper { max-width: 1200px; margin: 0 auto; padding: 1rem 2rem; display: flex; justify-content: space-between; align-items: center; }
    .site-logo .logo-link { font-size: 1.5rem; font-weight: bold; color: black; text-decoration: none; }
    .main-nav { display: flex; gap: 2rem; }
    .nav-link { color: black; text-decoration: none; position: relative; padding: 0.5rem; }
    .nav-item:hover .dropdown { display: block; }
    .dropdown { display: none; position: absolute; top: 100%; background: white; box-shadow: 0 2px 5px rgba(0,0,0,0.1); padding: 0.5rem; }
    .dropdown-link { display: block; padding: 0.25rem 0.5rem; color: black; text-decoration: none; }
    .dropdown-link:hover { background: #f7f7f7; }
    .header-icons .icon { margin-left: 1rem; position: relative; text-decoration: none; color: black; font-size: 1.2rem; }
    .cart-count { position: absolute; top: -6px; right: -10px; background: black; color: white; border-radius: 50%; padding: 0.1rem 0.4rem; font-size: 0.75rem; }
  </style>
</header>
